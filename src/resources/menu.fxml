<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="vboxMain" alignment="CENTER" prefHeight="665.0" prefWidth="1158.0" stylesheets="@app.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="thedrake.ui.ResponsiveController">
   <children>
      <ImageView fitHeight="192.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
         <image>
            <Image url="@shield.png" />
         </image>
      </ImageView>
      <Text fx:id="mainText" fill="#460000a3" stroke="#7f905d" strokeType="OUTSIDE" strokeWidth="0.0" text="THE DRAKE">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
         <font>
            <Font size="96.0" />
         </font>
         <effect>
            <InnerShadow />
         </effect>
      </Text>
      <Button fx:id="btnStartLAN" alignment="CENTER" mnemonicParsing="false" onAction="#startLAN" prefHeight="45.0" prefWidth="230.0" stylesheets="@app.css" text="Start LAN" textAlignment="CENTER">
         <font>
            <Font name="Intel One Mono" size="21.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
         <effect>
            <DropShadow height="44.0" radius="18.0" width="30.0">
               <color>
                  <Color red="0.2631579041481018" green="0.032894738018512726" blue="0.007309941574931145" />
               </color>
            </DropShadow>
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="btnStartAI" alignment="CENTER" mnemonicParsing="false" onAction="#startAI" prefHeight="45.0" prefWidth="230.0" stylesheets="@app.css" text="Start vs AI">
         <font>
            <Font name="Intel One Mono" size="21.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
         <effect>
            <DropShadow height="44.0" radius="18.0" width="30.0">
               <color>
                  <Color red="0.2631579041481018" green="0.032894738018512726" blue="0.007309941574931145" />
               </color>
            </DropShadow>
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="btnStartTwo" alignment="CENTER" mnemonicParsing="false" onAction="#startTwoPlayers" prefHeight="45.0" prefWidth="230.0" stylesheets="@app.css" text="Start 2 Player">
         <font>
            <Font name="Intel One Mono" size="21.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
         <effect>
            <DropShadow height="44.0" radius="18.0" width="30.0">
               <color>
                  <Color red="0.2631579041481018" green="0.032894738018512726" blue="0.007309941574931145" />
               </color>
            </DropShadow>
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="btnEXIT" alignment="CENTER" mnemonicParsing="false" onAction="#exit" prefHeight="45.0" prefWidth="150.0" stylesheets="@app.css" text="EXIT">
         <font>
            <Font name="Intel One Mono" size="21.0" />
         </font>
         <VBox.margin>
            <Insets bottom="25.0" top="20.0" />
         </VBox.margin>
         <effect>
            <DropShadow height="44.0" radius="18.0" width="30.0">
               <color>
                  <Color red="0.2631579041481018" green="0.032894738018512726" blue="0.007309941574931145" />
               </color>
            </DropShadow>
         </effect>
         <cursor>
            <Cursor fx:constant="CLOSED_HAND" />
         </cursor>
      </Button>
   </children>
</VBox>
